limbo = (-10000,-10000)
def ifexists(val, defau):
    if val:
        return val
    else:
        return defau
def sign(x):
    if x>0: return 1
    if x<0: return -1
    return 0

class Point:
    x = 0
    y = 0
    def __init__(self,x,y):
        self.x,self.y =x,y
    def __iter__(self):
        return iter([self.x,self.y])
    def __add__(self,other):
        return Point(self.x+other.x,self.y+other.y)
    def __sub__(self,other):
        return Point(self.x-other.x,self.y-other.y)
    def list(self):
        return [self.x,self.y]
    def __repr__(self):
        return str((self.x,self.y))

class Selection:
    state = 0
    saved_dash = ""
    saved = {}
    running = False
    element = None #the selected element
    canvas = None
    obj = None
    def __init__(self):
        pass
    def select(self,element):
        if not self.element:
            self.saved["color"] = palette.palette["color"].current
            self.saved["width"] = palette.palette["width"].current
        self.clear()
        self.element = element
        self.canvas = element.canvas
        self.obj = element.obj
        palette.palette["color"].select(element.color)
        palette.palette["width"].select(element.width)
        self.running = True
        self.animate()
    def animate(self):
        if self.running:
            self.state = (self.state+1)%6
            self.element.dash(self.state)
            root.after(200, self.animate)
        else:
            self.clear()
    def clear(self):
        if self.element:
            self.element.dash(None)
            self.element = None
            if self.saved:
                palette.palette["color"].select(self.saved["color"])
                palette.palette["width"].select(self.saved["width"])
                self.saved = {}
    def stop(self):
        self.running = False

selection = Selection()


